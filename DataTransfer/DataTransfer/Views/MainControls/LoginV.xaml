<Window x:Class="DataTransfer.Views.MainControls.LoginV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataTransfer.Views.MainControls"
        xmlns:vm="clr-namespace:DataTransfer.ViewModels.MainControls"
        d:DataContext="{d:DesignInstance Type=vm:LoginVM}"
        mc:Ignorable="d"
        Title="LoginV" Height="450" Width="800">
    <Grid>
        <Border>
            <StackPanel>
                <Grid>
                    <TextBlock Text="아이디"/>
                    <TextBox Text="{Binding Id}"/>
                </Grid>
                <Grid>
                    <TextBlock Text="비밀번호"/>
                    <TextBox Text="{Binding Password}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
